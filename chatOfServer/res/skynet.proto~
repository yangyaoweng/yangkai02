//3.3返回数据
message talk_passgamec
{
	message talk_trapgame
	{
		required string trapDamage = 1;		//固定伤害
		required string warlock = 2;		//持续伤害
		required string warlockTime = 3;	//持续时间
	}
	required int32 numa = 1;
	optional string addMagic = 2;		//加行动值
	optional string addProps = 3;		//加血
	optional string addTrea = 4;		//加宝藏
	optional talk_trapgame addgame = 5;	//触发陷阱
}


