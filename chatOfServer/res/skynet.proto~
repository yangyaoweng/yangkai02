//返回地图信息
message talk_maptable
{
	required string mapId = 1;		//地图编号
	required string gateNum = 2;		//地图编号
	required string boxSize = 3;		//地图大小
	required string mapNumber = 4;		//地图编号
	required string openStars = 5;		//开启星星数
	required string timeS = 6;		//时间（秒）
	required string effeGrid = 7;		//有效格子
	required string porTal = 8;		//传送门
	required string treaNum = 9;		//宝藏份数
	required string treaSpikes = 10;	//尖刺
	required string treaFrozen = 11;	//冰冻
	required string treaFlame = 12;		//火
	required string treaGrid = 13;		//电网
	required string numTrap = 14;		//陷阱总数
	required string treaProps = 15;		//生命道具
}

