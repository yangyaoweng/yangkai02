//用户登录后得到的消息
message talk_usergame
{
	message talk_dbrkey
	{
		required string id = 1;		//角色id
		required string rolekey = 2;	//角色键
	}
	message talk_currkey
	{
		required string id = 1;		//角色id
		required string name = 2;	//名称
		required string stageId = 3;	//阶段id
		required string stage = 4;	//阶段
		required string levelCap = 5;	//等级
		required string life = 6;	//当前血量
		required string userLife = 7;	//最高血量
		required string restoreLife = 8;//当前的回血量
	}
	required int32 userId = 1;		//用户Id
	required string dbrkey = 2;		//用户keys
	repeated talk_dbrkey rolekey = 3;	//角色列表keys
	required int32 gasNo = 4;		//宝气等级
	optional int32 gasValues = 5;		//最高宝气值
	required int32 usegasValues = 6;	//当前宝气值
	required int32 userCurr = 7;		//萌币
	required int32 diamondVip = 8;		//钻石等级
	required int32 diamond = 9;		//钻石
	required int32 pass = 10;		//最高关卡
	required int32 userSlot = 11;		//角色槽
	required string roleopen = 12;		//当前角色键值
	required int32 userState = 13;		//当前状态
	required string userGame = 14;		//游戏中的战斗
	required int32 stars = 15;		//星星
	repeated talk_currkey currRole = 16;	//当前角色信息
}



//得到宠物属性消息格式
message talk_tablerole
{
	message talk_role02
	{
		optional int32 id = 1;			//用户的角色id
		required int32 gameuser = 2;		//角色Id
		required string name = 3;		//角色名称
		required string rolekey = 4;		//角色键值
		required int32 stage = 5;		//角色阶段
		required int32 life = 6;		//当前生命值
		required int32 userLife = 7;		//角色生命值
		required int32 levelCap = 8;		//角色等级
		required int32 restoreLife = 9;		//每小时恢复生命值
		required int32 objTres = 10;		//物抗
		required int32 objPati = 11;		//物耐
		required int32 iceTres = 12;		//冰抗
		required int32 icePati = 13;		//冰耐
		required int32 fireTres = 14;		//火抗
		required int32 firePati = 15;		//火耐
		required int32 electTres = 16;		//电抗
		required int32 electPati = 17;		//电耐
	
	}
	repeated talk_role02 roleuser = 1;
}
//创建宠物消息格式
message talk_createrole
{
	message talk_role03
	{
		required int32 id = 1;			//角色id
		required string name = 2;		//角色名称
		required int32 stage = 3;		//角色阶段
		required int32 userLife = 4;		//角色生命值
		required int32 levelCap = 5;		//角色等级
		required int32 restoreLife = 6;		//每小时恢复生命值
		required int32 objTres = 7;		//物抗
		required int32 objPati = 8;		//物耐
		required int32 iceTres = 9;		//冰抗
		required int32 icePati = 10;		//冰耐
		required int32 fireTres = 11;		//火抗
		required int32 firePati = 12;		//火耐
		required int32 electTres = 13;		//电抗
		required int32 electPati = 14;		//电耐
		required int32 userCurr = 15;		//萌币
		required int32 diamond = 16;		//钻石
	}
	repeated talk_role03 rolecreate = 1;
}

