{
	message talk_friend01
	{
		required string userId = 1;			//好友ID
		required string purName = 2;			//好友名
		required string usegasValues = 3;		//当前宝气值
		required string pass = 4;			//最高关卡
		required string gasNo = 5;			//宝气等级
		required string start = 6;			//星星

	}
	message talk_friend02
	{
		required int32 purid = 1;			//目的id
		required string puruser = 2;			//目的名字
		required string purkey = 3;			//键
		required int32 souid = 4;			//源id
		required string souuser = 5;			//源名字
		required string soukey = 6;			//键
	}
	repeated talk_friend01 friends = 1;
	repeated talk_friend02 addfriend = 2;
}
