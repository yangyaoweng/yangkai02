message talk_openmall
{
	message talk_mallrole
	{
		required int32 id = 1;			//角色id
		required string name = 2;		//角色名称
		required int32 stage = 3;		//角色阶段
		required int32 userLife = 4;		//角色生命值
		required int32 levelCap = 5;		//角色等级
		required int32 restoreLife = 6;		//每小时恢复生命值
		required int32 objTres = 7;		//物抗
		required int32 objPati = 8;		//物耐
		required int32 iceTres = 9;		//冰抗
		required int32 icePati = 10;		//冰耐
		required int32 fireTres = 11;		//火抗
		required int32 firePati = 12;		//火耐
		required int32 electTres = 13;		//电抗
		required int32 electPati = 14;		//电耐
		required int32 userCurr = 15;		//萌币
		required int32 diamond = 16;		//钻石
	}
	message talk_mallitem
	{
		optional int32 id = 1;			//道具id
		required string itemName = 2;		//道具名称
		required string itemDescr = 3;		//道具说明
		required int32 userCurr = 4;		//道具价格萌币
		required int32 diamond = 5;		//道具价格钻石
		required string use = 6;		//使用方式
	}
	repeated talk_mallrole mallrole = 1;
	repeated talk_mallitem mallitem = 2;
	
}

