	{
		required string gameuser = 1;		//角色Id
		required string rolekey = 2;		//角色键值
		required string life = 3;		//当前生命值
		required string userLife = 4;		//角色生命值
		required string levelCap = 5;		//角色等级
		required string actionVal = 6;		//角色行动值
	}
