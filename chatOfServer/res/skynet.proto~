	required int32 touserid = 2;	//角色名id
	required string msg = 3;	//角色名长度
}

//角色对战消息格式talk_users
message talk_tableroles
{
	//角色动作
	enum RoleType {
  		MOBILE = 1;		//移动
  		STANDING = 2;	//站立
  		LEFTLOWER = 3;	//左下
  		LOWRIGHT = 4;	//右下
  		UPPERLEFT = 5;	//左上
  		UPPERRIGHT = 6;	//右上
  		ALEFT = 7;		//向左
  		RIGHT = 8;		//向右
  		TRAP = 9;		//中陷阱
  		OVER = 10;		//死亡
	}
	//陷阱/加血/宝藏种类
	enum TrapTypes {
		OBJTRAP = 1;	//尖刺
		ICETRAP = 2;	//冰冻
		FIRETRAP = 3;	//火焰
		ELECTTRAP = 4;	//电网
		LIFE = 5;		//加血
		TREASUE = 6;	//宝藏

	}
	//陷阱等级
	enum TrapLevel {
		LEVEL1 = 1;
		LEVEL2 = 2;
		LEVEL3 = 3;
		LEVEL4 = 4;
		LEVEL5 = 5;
		LEVEL6 = 6;
		LEVEL7 = 7;
		LEVEL8 = 8;
	}
	//宠物属性
	message TableRole
	{
		required int32 id = 1;
		required string name = 2;
		optional string agename = 3;
  		required int32 stage = 4;
		required int32 userLife = 5;
		required int32 levelCap = 6;
		required int32 restoreLife = 7;
		required int32 objTres = 8;
		required int32 objPati = 9;
		required int32 iceTres = 10;
		required int32 icePati = 11;
		required int32 fireTres = 12;
		required int32 firePati = 13;
		required int32 electTres = 14;
    	required int32 electPati = 15;
	}
    required TableRole roles = 1;	//宠物列表

    //角色方位
    message RoleLocation
    {
    	required int32 ranksH =1;	//行
    	required int32 ranksL =2;	//列
    }

    //获取陷阱
	message TrapBorn
	{
		required RoleLocation roleName = 1;
		required TrapTypes trapType = 2;
		required TrapLevel trapLe = 3;
	}
	//诞生/陷阱.加血
    required TrapBorn trapLevel = 2;


    //角色状态
    message UserState
    {
    	required int32 userId = 1;			//用户id
    	required int32 id = 2;				//角色id
    	required RoleType roleBoom = 3;		//角色动作
    	required RoleLocation roleLoc = 4;	//角色方位
    }
    required UserState userTable = 3;
}



